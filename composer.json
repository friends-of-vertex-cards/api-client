{
    "name": "friends-of-vertex-cards/api-client",
    "description": "PHP library for Vertex Cards API interaction",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "FriendsOfVertexCards\\ApiClient\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.3",
        "php-http/httplug": "^2.4",
        "psr/log": "^3.0",
        "ramsey/uuid": "^4.9",
        "php-http/logger-plugin": "^1.4",
        "nyholm/psr7": "^1.8",
        "symfony/serializer": "^7.3",
        "php-http/guzzle7-adapter": "^1.1",
        "symfony/property-access": "^7.3"
    },
    "scripts": {
        "cs-fix": [
            "./vendor/bin/php-cs-fixer fix --allow-risky=yes --show-progress=dots"
        ],
        "cs-check": [
            "./vendor/bin/php-cs-fixer check --allow-risky=yes --show-progress=dots"
        ],
        "psalm": [
            "./vendor/bin/psalm.phar"
        ],
        "phpunit": [
            "./vendor/bin/phpunit"
        ]
    },
    "config": {
        "platform": {
            "ext-tokenizer": "1"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88",
        "psalm/phar": "^6.13",
        "phpunit/phpunit": "^12.4"
    }
}
